<div class="col-md-8 col-md-offset-2">

  <div class="jumbotron">
    <h2><%= @group.title %></h2>
    <br><br>
    <p ><%= @group.description %></p>
    <% if current_user && current_user == @group.user %>
      <%= link_to("修改讨论组", edit_group_path(@group), class: "btn btn-primary")%>
    <% end %>
  </div>

  <table class="table">
    <thead>
     <tr>
        <th>文章内容</th>
        <th>发表者</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to(post.title, group_post_path(@group)) %></td>
          <td><%= post.content %></td>
          <td><%= post.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <%= simple_form_for @group do |f| %>
    <div class="form-group">
      <%= f.input :title, input_html: { class: "form-control"} %>
      <%= f.input :description, input_html: { class: "form-control"} %>
    </div>
    <div class="group">
      <%= f.input :image, as: :file %>
    </div>

    <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
  <% end %>
  
  <div class="group">
    <%= link_to("发表讨论", new_group_post_path(@group), class: "btn btn-default")%>
  </div>
</div>
